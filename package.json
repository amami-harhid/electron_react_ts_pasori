{
  "name": "electron_react_ts_pasori",
  "version": "0.0.1",
  "description": "IC-Card entry and exit system",
  "main": "dist/main.js",
  "author": "@amami-harhid",
  "license": "AGPL-3.0-only",
  "scripts": {
    "dev": "rimraf dist && run-p dev:webpack dev:electron",
    "dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
    "dev:electron": "wait-on ./dist/index.html ./dist/main.js && electronmon .",
    "build": "cross-env NODE_ENV=\"production\" webpack --progress",
    "dist": "electron-builder"
  },
  "electronmon": {
    "patterns": [
      "dist/**/*"
    ]
  },
  "build": {
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ]
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.3",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electronmon": "^2.0.4",
    "html-webpack-plugin": "^5.6.6",
    "mini-css-extract-plugin": "^2.10.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.2",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2",
    "nfc-pcsc": "^0.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
